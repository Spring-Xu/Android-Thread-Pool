<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/create_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Create thread pool" />

    <Button
        android:id="@+id/add_runnable"
        android:layout_below="@+id/create_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="add a runnable"/>

    <Button
        android:id="@+id/add_asynctask"
        android:layout_below="@+id/add_runnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="test asynctask"/>

    <Button
        android:id="@+id/shout_down_pool"
        android:layout_below="@+id/add_asynctask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Shout down pool"/>
    <TextView
        android:id="@+id/info"
        android:layout_below="@+id/shout_down_pool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
